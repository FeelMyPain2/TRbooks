@model TRbooks.Models.Rental
@{
    ViewBag.Title = "New Rental";
}
@using (Html.BeginForm("CreateRentals", "Rentals"))
{
    <div id="form">
        <h2>@ViewBag.Title</h2>
        <table>
            <tr>
                <td width="200">@Html.LabelFor(m => m.Customer)</td>
                <td>
                    @Html.TextBoxFor(m => m.Customer)<br />
                    @Html.ValidationMessageFor(m => m.Customer)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Book)</td>
                <td>
                    @Html.TextBoxFor(m => m.Book)<br />
                    @Html.ValidationMessageFor(m => m.Book)
                </td>
            </tr>
        </table>
        <div>
            @Html.HiddenFor(m => m.DateRented)
            @Html.HiddenFor(m => m.Id)
            <button type="submit" id="butOK" style="margin-top:15px">Create new rental</button>
        </div>
    </div>
}
